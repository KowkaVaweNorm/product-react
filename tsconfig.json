{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,  // тип any запрещен к использолванию?
        "strictNullChecks": true, // При true разрешает возвращать null вместо конкретного типа
        "noImplicitReturns": true, // Во всех случаях код производит return?
        "noUncheckedIndexedAccess": true, // Запрещать использование значения которого может не быть по этому ключу
        "noImplicitOverride": true,  // прописывать перед прегруженными свойствами и методавми ключевое слово override
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}